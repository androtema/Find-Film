<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FindFilm" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.FindFilm" parent="Base.Theme.FindFilm" />

    <declare-styleable name="RatingDonutView">
        <attr name="progress" format="integer" />
        <attr name="stroke" format="float" />
    </declare-styleable>

    <style name="FabStyle">
        <item name="backgroundTint">#F0F0F0</item>
        <item name="tint">@android:color/black</item>
        <item name="maxImageSize">30dp</item>
        <item name="borderWidth">4dp</item>

        <!-- elevation -->
        <item name="rippleColor">@color/ripple_color</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="hoveredFocusedTranslationZ">8dp</item>
    </style>
</resources>