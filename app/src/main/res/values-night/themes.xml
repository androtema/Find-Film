<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.FindFilm" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorAccent">#FF000000</item>
        <item name="colorPrimaryDark">#FF000000</item>
        <item name="colorPrimary">#FF000000</item>
        <item name="color">#FF000000</item>
        <item name="android:textColorLink">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <declare-styleable name="RatingDonutView">
        <attr name="progress" format="integer" />
        <attr name="stroke" format="float" />
    </declare-styleable>

    <style name="FabStyle">
        <item name="backgroundTint">@color/white</item>
        <item name="tint">@android:color/black</item>
        <item name="maxImageSize">30dp</item>
        <item name="borderWidth">10dp</item>
        <item name="layout_anchor">@id/app_bar</item>

        <!-- elevation -->
        <item name="rippleColor">@color/ripple_color</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="hoveredFocusedTranslationZ">8dp</item>
    </style>
</resources>